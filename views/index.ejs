<main>
  <div class="message-list">
    <% messages.forEach(message => { %>
      <div class="msg">

        <div class="user-detail">
          <% if (typeof user !== 'undefined' && (user.member || user.admin)) { %>
            <h1><%= message.user.username %> </h1>
          <% } else { %>
            <h3>Hidden name.</h3>
            <h3>Please become member to see who send this message</h3>
          <% } %>
          <img src='/images/<%=message.user.avatar%>.png' alt="Profile pic">
        </div>

        <div class="msg-detail">
          <h1><%- message.title %></h1>
          <p><%- message.text %></p>
          <div class="msg-del-date">
            <% if (typeof user !== 'undefined' && user.admin) { %>
              <form action="" method="POST">
                <input type="hidden" value="<%=message._id %>" name='messageid' id='delete' />
                          <button>Delete message</button>
              </form>
            <% } %>

            <% if (typeof user !== 'undefined' && (user.member || user.admin)) { %>
              <span><%= message.post_date_formatted %> </span>
            <% } else { %>
              <span>Please become member to see the date message posted</span>
            <% } %>
          </div>
        </div>

      </div>
    <% }); %>
  </div>
</main>
